<md-dialog>
	<md-content>
		<div class="form">
	        <section layout="column" layout-align="center center">

	                <md-input-container>
	                    <label>Название встречи</label>
	                    <input type="text" ng-model="formData.title">
	                </md-input-container>

	                <md-input-container>
	                    <label>Описание встречи</label>
	                    <input type="text" ng-model="formData.description">
	                </md-input-container>

	        </section>

	        <section layout="column" layout-align="center center">
	        	<md-select ng-model="formData.category" placeholder="Выберите категорию">
				    <md-option value="Спорт" ng-selected="selected" default>Спорт</md-option>
				    <md-option value="Развлечения">Развлечения</md-option>
				</md-select>
	        </section>



	            <section class="datetime-pickers" layout="row" layout-sm="column" layout-align="center center">

	                    <md-input-container>
	                        <label>Время встречи</label>
	                        <input type="time" ng-model="formData.startTime" min="timeNow()">
	                    </md-input-container>

	                    <md-input-container>
	                        <label>Дата встречи</label>
	                        <input type="date" ng-model="formData.startDate" min="Date.now()">
	                    </md-input-container>
	                
	            </section>

	        <section layout="row">

	                <md-select ng-model="formData.visibility" placeholder="Эту встречу увидят...">
	                    <md-option value="Общие" ng-selected="selected" default>Все</md-option>
	                    <md-option value="Друзья">Друзья</md-option>
	                </md-select>
	                
                
	        </section>
	        <section layout="row">
                <div ng-dropdown-multiselect="" options="users" selected-model="invitedUsers" extra-settings="invitedUsersSettings" translation-texts="invitedUsersText"></div>
            </section>
           <!--<section layout="row">
                <div
                        isteven-multi-select
                        input-model="users"
                        output-model="invitedUsers"
                        button-label="facebook.name"
                        item-label="facebook.name _id"
                        tick-property="ticked"
                        >
                </div>
            </section>-->

	        <section layout="row">
	        	<div ng-repeat="user in users">
		        	<md-checkbox ng-model="invitedUsers" aria-label="{{user.facebook.name}}" ng-change="inviteUser(user)">{{user.facebook.name}}</md-checkbox>
	        	</div>
	                
	        </section>
	        <section layout="row" layout-align="center center" class="buttons">
	        	<div>
		            <md-button class="md-raised" nh-click="$scope.cancel()">Отмена</md-button>
	            </div>
	            <div>
		            <md-button class="md-raised md-primary" type="submit" ng-click="createMeeting()">Создать</md-button>
	            </div>
	        </section>
	    </div><!-- end form -->
	</md-content>
</md-dialog>